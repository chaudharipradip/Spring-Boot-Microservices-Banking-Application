pipeline {
    agent any

   parameters {
        choice(name: 'ENVIRONMENT', choices: ['force-release', 'dev', 'staging', 'prod'], description: 'Select environment to deploy')
    }

    environment {
        BASE_VERSION = '0.0.1'
        MAVEN_CLI_OPTS = '-B -DskipTests'
    }

    stages {
        stage('Checkout') {
            steps {
               // git 'https://github.com/chaudharipradip/Spring-Boot-Microservices-Banking-Application.git'
                git branch: 'main', url: 'https://github.com/chaudharipradip/Spring-Boot-Microservices-Banking-Application.git'

            }
        }

        stage('Build & Deploy') {
            steps {
     
                sh "cd API-Gateway && mvn clean deploy -P${params.ENVIRONMENT} -DskipTests"
            }
        }

      
    }

  post {
            success {
                echo "Deployment to ${params.ENVIRONMENT} Nexus repo successful."
            }
            failure {
                echo "Deployment to ${params.ENVIRONMENT} failed."
            }
        }
}
