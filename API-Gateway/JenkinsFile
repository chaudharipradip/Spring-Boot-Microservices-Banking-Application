pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/chaudharipradip/Spring-Boot-Microservices-Banking-Application.git'
            }
        }

        stage('Build') {
            steps {
                sh './mvnw clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh './mvnw test'
            }
        }
    }
}
